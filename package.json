{
  "name": "custom-ai-chatbot",
  "version": "0.0.1",
  "private": true,
  "description": "A full-stack AI chatbot application with admin dashboard, embeddable chat UI, and Node.js API",
  "author": {
    "name": "Chamindu Vidyarathne",
    "email": "chamindudvidyarathne@gmail.com"
  },
  "license": "MIT",
  "packageManager": "pnpm@10.0.0",
  "scripts": {
    "dev:admin": "pnpm --filter admin-dashboard dev",
    "dev:api": "pnpm --filter api-server dev",
    "dev:chat": "pnpm --filter chat-bubble dev",
    "dev": "pnpm --parallel --filter \"./admin-dashboard\" --filter \"./api-server\" --filter \"./chat-bubble\" dev",
    "build:admin": "pnpm --filter admin-dashboard build",
    "build:api": "pnpm --filter api-server build",
    "build:chat": "pnpm --filter chat-bubble build",
    "build": "pnpm --filter \"./admin-dashboard\" --filter \"./api-server\" --filter \"./chat-bubble\" build",
    "lint": "biome check --no-errors-on-unmatched",
    "lint:fix": "biome check --write --no-errors-on-unmatched --assist-enabled=true",
    "format": "biome format --write .",
    "clean": "pnpm --filter \"./admin-dashboard\" --filter \"./api-server\" --filter \"./chat-bubble\" clean"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.3",
    "rimraf": "^6.0.1",
    "typescript": "^5.1.6"
  }
}
